<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Listings</h3>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 justify-content-center">
    <% for (let i=0; i < allListings.length; i++) { %>
    <a href="/listings/<%= allListings[i]._id %>" class="listing_link">
    <div class="card col">
    <img src="<%= allListings[i].image %>" class="card-img-top" alt="Listing Images" style="height:20rem">

    <div class="card-img-overlay"> 
    </div>
    <div class="card-body">
        <p class="card-text">
            <b>
                <%= allListings[i].title %> <br>
            </b>
            &#8377; <%= allListings[i].price.toLocaleString("en-IN") %> /night
        </p>
    </div>
    </div>
    </a>
    
    <% } %>

    </div>
   
</body>